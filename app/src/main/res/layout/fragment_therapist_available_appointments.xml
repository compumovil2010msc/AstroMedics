<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".views.pacient.fragments.TherapistAvailableAppointments">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:layout_gravity="center"
            android:layout_margin="24px"
            android:src="@drawable/ic_assignment_ind_black_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="24px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="24dp"
                android:text="@string/therapist_available_appointment_info" />

            <Spinner
                android:id="@+id/therapist_available_appointments_day_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLight"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/therapist_available_appointment_hour_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>