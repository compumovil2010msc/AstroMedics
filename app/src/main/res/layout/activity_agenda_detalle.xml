<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="18dp"
    tools:context=".views.pacient.AgendaDetalle">

    <ImageView
        android:id="@+id/agenda_detalle_imagen"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/agenda_detalle_imagen">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="18dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Formación Académica"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/agenda_detalle_especializacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Psicologo"
                android:textColor="#000000"
                android:textSize="32dp" />

            <TextView
                android:id="@+id/agenda_detalle_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Universidad Javeriana"
                android:textColor="#909090" />

            <TextView
                android:id="@+id/agenda_detalle_hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Universidad Javeriana"
                android:textColor="#909090" />

            <TextView
                android:id="@+id/agenda_detalle_ubicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Universidad Javeriana"
                android:textColor="#909090" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>